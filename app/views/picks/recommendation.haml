.headline Results

%h1.recommendation-header On Your Team
.new-line
- @friendlies.each do |hero|
  .center
    .hero-box
      .hero_big{class: hero.name.parameterize}
      .hero_name= hero.name

%h1.recommendation-header On the Enemy Team
- @enemies.each do |hero|
  .center
    .hero-box
      .hero_big{class: hero.name.parameterize}
      .hero_name= hero.name

%h1.recommendation-header Recommended Picks
.new-line
- @recommendation.each do |hero_score|
  .center
    .hero-box
      .hero_big{class: hero_score.first.name.parameterize}
      .hero_name= hero_score.first.name
      .hero_name= hero_score.second

%h1.recommendation-header Worst Picks
- @worst.each do |hero_score|
  .center
    .hero-box
      .hero_big{class: hero_score.first.name.parameterize}
      .hero_name= hero_score.first.name
      .hero_name= hero_score.second

.new_line
.submit_wrapper
  = button_to("Back", pick_assistant_path, class: "submit", method: :get)
