#light_box
  #calculating-modal
    = fa_icon "spinner spin", class: "spinner"
    Calculating...

.picker
  = form_tag pick_assistant_path, method: :post do |f|
    .headline Dota 2 Pick Wizard
    .new-line

    .your-team
      .headline Your Team

      .strategy-selector
        = radio_button_tag "composition", 'ideal_balanced_vector', checked: true
        = label_tag 'composition_ideal_balanced_vector', '2-1-2'

        = radio_button_tag 'composition', 'ideal_jungling_vector'
        = label_tag 'composition_ideal_jungling_vector', 'Jungling'

        = radio_button_tag 'composition', 'ideal_trilane_vector'
        = label_tag 'composition_ideal_trilane_vector', 'Trilane'

      = text_field_tag :text, "", class: 'text-input', id: 'autocomplete'

      .new-line

      .hero-box.friendly#friendly-0
      .hero-box.friendly#friendly-1
      .hero-box.friendly#friendly-2
      .hero-box.friendly#friendly-3

    .enemy-team
      .headline Enemy Team

      = text_field_tag :text, "", class: 'text-input', id: 'autocomplete'

      .new-line

      .hero-box.enemy#enemy-0
      .hero-box.enemy#enemy-1
      .hero-box.enemy#enemy-2
      .hero-box.enemy#enemy-3
      .hero-box.enemy#enemy-4

