@import mixins

thumb-width = 70px

.characters
  padding: 5px 10px

  &.bans
    height: 216px

  .character
    float: left
    position: relative
    round-corners(3px, 3px, 3px, 3px)
    margin: 5px 7px
    min-height: thumb-width

    &.dead
      opacity: 0.3

     label
       display: block
       width: thumb-width
       height: thumb-width

       &.default
         background: asset-url('heroes_big.jpg')
         background-position: -28px 0

    .name
      width: thumb-width
      height: 30px
      text-align: center

    &.addable:hover, &.removeable:hover
      cursor: pointer

      &:before
        position: absolute
        width: 100%
        height: 100%
        background: rgba(0,0,0,0.3)
        text-align: center
        line-height: 60px
        font-size: 30px

    &.addable:hover:before
      content: "+"

    &.removeable:hover:before
      content: "-"


