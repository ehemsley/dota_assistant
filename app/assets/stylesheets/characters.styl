thumb-width = 70px

.characters
  padding: 5px 10px 0 10px

  .character
    float: left
    position: relative
    width: thumb-width
    height: thumb-width
    round-corners(3px, 3px, 3px, 3px)
    background-color: #333
    margin: 5px
    background-image: url(/assets/char-none.png)
    background-size: cover

    .name
      name-padding = 3px
      position: absolute
      bottom: 0
      padding: name-padding
      width: thumb-width - (name-padding * 2)
      text-align: center
      background-color: rgba(0,0,0,0.3)

    &.addable:hover, &.removeable:hover
      cursor: pointer

      &:before
        position: absolute
        width: 100%
        height: 100%
        background: rgba(0,0,0,0.3)
        text-align: center
        line-height: 60px
        font-size: 30px

    &.addable:hover:before
      content: "+"

    &.removeable:hover:before
      content: "-"